<p id="notice"><%= notice %></p>

<h1>質問一覧</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>アンケート番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionary_items.each do |questionary_item| %>
      <tr>
        <td><%= questionary_item.content %></td>
        <td><%= questionary_item.questionary_id %></td>
        <td><%= link_to '詳細', questionary_item %></td>
        <td><%= link_to '編集', edit_questionary_item_path(questionary_item) %></td>
        <td><%= link_to '削除', questionary_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい質問', new_questionary_item_path %>
