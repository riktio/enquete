<p id="notice"><%= notice %></p>

<h1>Questionary Choices</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th>value</th>
      <th>質問</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questionary_choices.each do |questionary_choice| %>
      <tr>
        <td><%= questionary_choice.content %></td>
        <td><%= questionary_choice.value %></td>
        <td><%= questionary_choice.questionary_item_id %></td>
        <td><%= link_to '詳細', questionary_choice %></td>
        <td><%= link_to '編集', edit_questionary_choice_path(questionary_choice) %></td>
        <td><%= link_to '削除', questionary_choice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '次の質問を作成', new_questionary_choice_path %>